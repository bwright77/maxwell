
    <div class="container">
      <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="<%= @user.gravatar %>" alt="" width="72" height="72">
        <h2>Display name: <%= @user.name %></h2>
        <p class="lead"><a href="<%= @user.link %>"><%= @user.link %></a></p>
      </div>

      <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Score</span>
            <span class="badge badge-secondary badge-pill"><%= @user.score %></span>
          </h4>
          <ul class="list-group mb-3">
            <% @user.scores.each do |type, count| %>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0"><%= type %>s</h6>
              </div>
              <span class="text-muted"><%= count %></span>
            </li>
            <% end %>
          </ul>
        </div>

        <div class="col-md-8 order-md-1">
          <h4 class="mb-3">Events</h4>
          <% @events.each do |event| %>
            <div class="mb-3">
              <dl class="row">
                <dt class="col-sm-9"><%= event.type %></dt>
                <dd class="col-sm-3"><%= time_ago_in_words event.created_at %> ago</dd>
            </dl>
            </div>
            <% end %>

            <% @response %>
        </div>
      </div>